<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"></Label>
    <Label text="Message:" GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
    <TextField  fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>
    <TextField  fx:id="messageField" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextField>
    <Button text="Send" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#sendMessage"></Button>
    <Button text="Exit" GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#exitClient"></Button>
</GridPane>