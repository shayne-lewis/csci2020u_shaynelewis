<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.DatePicker?>

<GridPane alignment="BASELINE_CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">
    <Text text="Registration"
          GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"></Text>

    <Label text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField id="username" fx:id="username"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField id="passwordField" fx:id="passwordField"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Full Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField id="nameField" fx:id="nameField"
            GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="E-Mail:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField id="emailField" fx:id="emailField"
            GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Phone #:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField id="phoneField" fx:id="phoneField"
            GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Date of Birth:"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <DatePicker id="birthField" fx:id="birthField"
            GridPane.columnIndex="1" GridPane.rowIndex="6"/>


    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Register"
                onAction="#handleSubmitButtonAction"/>
    </HBox>

    <Text fx:id="actiontarget"
          GridPane.columnIndex="1" GridPane.rowIndex="8"/>


</GridPane>